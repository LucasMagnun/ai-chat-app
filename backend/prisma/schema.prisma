datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL") // postgres://user:password@host:5432/dbname
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id            String      @id @default(uuid())
  firebaseUid   String      @unique
  email         String?     @unique
  name          String?
  createdAt     DateTime    @default(now())
  updatedAt     DateTime    @updatedAt

  conversations Conversation[]
  messages      Message[]
}

model Conversation {
  id        String     @id @default(uuid())
  title     String?    // opcional: pode ser "Chat com IA - 23/09"
  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt

  userId String
  user   User          @relation(fields: [userId], references: [id])

  messages Message[]
}

model Message {
  id          String      @id @default(uuid())
  content     String
  sender      MessageSender
  createdAt   DateTime    @default(now())

  conversationId String
  conversation   Conversation @relation(fields: [conversationId], references: [id])

  userId String?   // Preenchido só quando for mensagem do usuário
  user   User?     @relation(fields: [userId], references: [id])
}

enum MessageSender {
  USER
  AI
}